PROG = Zstd
DEF_FILE = ../Codec.def

# IS_X64 = 1
# USE_ASM = 1
# ST_MODE = 1

ifdef SystemDrive

LOCAL_FLAGS_WIN = \
  -D_7ZIP_LARGE_PAGES \
  $(LOCAL_FLAGS_ST) \

SYS_OBJS = \

else

SYS_OBJS = \
  $O/MyWindows.o \

endif

LOCAL_FLAGS = \
  -DEXTERNAL_CODECS \
  $(LOCAL_FLAGS_WIN) \
  $(LOCAL_FLAGS_ST) \

COMMON_OBJS = \
  $O/InBuffer.o \
  $O/OutBuffer.o \
  $O/StreamUtils.o \
  $O/System.o \

COMPRESS_OBJS_2 = \
  $O/CodecExports.o \
  $O/DllExportsCompress.o \
  $O/Alloc.o \
  $O/ZstdRegister.o \
  $O/ZstdZipRegister.o \
  $O/ZstdEncoder.o \
  $O/ZstdDecoder.o \
  $O/libzstd.a \

OBJS = \
  $(COMPRESS_OBJS_2) \
  $(SYS_OBJS) \
  $(COMMON_OBJS) \

include ../../7zip_gcc.mak

$O/ZstdRegister.o: Compress/ZstdRegister.cpp
	$(CXX) $(CXXFLAGS) $<
$O/ZstdZipRegister.o: Compress/ZstdZipRegister.cpp
	$(CXX) $(CXXFLAGS) $<
$O/ZstdEncoder.o: Compress/ZstdEncoder.cpp
	$(CXX) $(CXXFLAGS) $<
$O/ZstdDecoder.o: Compress/ZstdDecoder.cpp
	$(CXX) $(CXXFLAGS) $<

$O/libzstd.a: zstd/lib/zstd.h
	$(RM) -rf zstd_build
	$(MY_MKDIR) -p zstd_build
	cd zstd_build; \
	cmake ../zstd/build/cmake; \
	make -j; \
	cd ..; \
	cp zstd_build/lib/libzstd.a $O

